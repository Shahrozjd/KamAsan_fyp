<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_scrollvw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSPProfileActivity"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorSapphireBlue"
        android:background="@drawable/imageview_border"
        android:id="@+id/tv_title_edit_sp_profile"
        >
    </TextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_prof_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_title_edit_sp_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/imageview_border"
        android:scaleType="fitXY"></androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
        android:layout_below="@id/iv_prof_pic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_pic"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Upload Profile Picture"
            android:id="@+id/btn_pic_gallery"
            android:background="@drawable/circle_background2"
            android:src="@drawable/upload18x18"
            android:layout_marginBottom="3dp"
            ></androidx.appcompat.widget.AppCompatImageButton>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_pic_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_background2"
            android:src="@drawable/camera18x18"
            android:layout_marginBottom="3dp"
            android:text="Upload Profile Picture"></androidx.appcompat.widget.AppCompatImageButton>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_rotate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_background2"
            android:src="@drawable/rotation18x18"
            android:layout_marginBottom="3dp"
            android:text="Upload Profile Picture"></androidx.appcompat.widget.AppCompatImageButton>


    </LinearLayout>


    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_pic"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"></EditText>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_phone"
        android:layout_below="@+id/ed_name"

        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        >

    </EditText>
    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/tv_latitude"
        android:layout_below="@+id/ed_phone"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/imageview_border"
        >

    </TextView>

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/tv_longitude"
        android:layout_below="@+id/ed_phone"
        android:layout_toRightOf="@id/tv_latitude"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/imageview_border"
        >

    </TextView>

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/ed_phone"
        android:layout_toRightOf="@id/tv_longitude"
        android:text="Change Location"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorSapphireBlue"
        android:id="@+id/btn_changelocation"
        >

    </Button>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_longitude"
        android:layout_marginTop="1dp"
        android:id="@+id/ed_bio"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        >
    </EditText>

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_bio"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"></EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_password"
        android:layout_marginTop="0dp"
        android:id="@+id/layout_time"
        android:background="@drawable/imageview_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Availability Time"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/tv_title_tme"
            android:textColor="@color/colorSapphireBlue"
            />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_hours"
            android:layout_below="@+id/tv_title_tme"
            android:background="@drawable/imageview_border"
            android:textSize="20sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:layout_marginBottom="3dp"
            android:maxLength="2"


            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_minutes"
            android:layout_below="@+id/tv_title_tme"
            android:layout_toRightOf="@+id/start_hours"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:background="@drawable/imageview_border"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:layout_marginBottom="3dp"
            android:maxLength="2"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_colon"
            android:layout_below="@+id/tv_title_tme"
            android:layout_toRightOf="@+id/start_minutes"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:text=":"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_hours"
            android:layout_below="@+id/tv_title_tme"
            android:layout_toRightOf="@+id/tv_colon"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:background="@drawable/imageview_border"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:layout_marginBottom="3dp"
            android:maxLength="2"
            />

        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_minutes"
            android:layout_below="@+id/tv_title_tme"
            android:layout_toRightOf="@+id/end_hours"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:background="@drawable/imageview_border"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:layout_marginBottom="3dp"
            android:maxLength="2"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_responsetime"
        android:layout_below="@+id/layout_time"
        android:layout_marginTop="0dp"
        android:background="@drawable/imageview_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Response Time"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/tv_title_responseTime"
            android:textColor="@color/colorSapphireBlue"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_responseTime"
            android:layout_marginTop="0dp"
            android:weightSum="1"
            android:id="@+id/radio_group"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_responseTime"
                android:layout_marginTop="3dp"
                android:id="@+id/radio_30min"
                android:text="30 minutes"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_30min"
                android:layout_marginTop="2dp"
                android:id="@+id/radio_1hour"
                android:text="1 hour"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_1hour"
                android:layout_marginTop="2dp"
                android:id="@+id/radio_1.5hour"
                android:text="1.5 hours"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_1.5hour"
                android:layout_marginTop="2dp"
                android:id="@+id/radio_2hour"
                android:text="2 hours"/>

        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_visitcost"
        android:layout_below="@+id/layout_responsetime"
        android:layout_marginBottom="0dp"
        android:background="@drawable/imageview_border"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Cost"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/tv_title_visitcost"
            android:textColor="@color/colorSapphireBlue"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_visitcost"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/imageview_border"
            android:inputType="number"
            android:id="@+id/ed_visit_cost"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_visitcost"
        android:id="@+id/txt_lbl_categories"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="@color/colorSapphireBlue"
        android:background="@color/colorWhite"
        android:textSize="15sp"
        ></TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_lbl_categories"
        android:id="@+id/list_categories"
        android:layout_marginTop="0dp"


        ></ListView>

 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/list_categories"
     android:id="@+id/btn_save"
     android:text="Save"
     android:textSize="20sp"
     android:textColor="@color/colorWhite"
     android:background="@color/colorSapphireBlue">


 </Button>






</RelativeLayout>
</ScrollView>