<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imageview_border">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="start"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mainaccent"
                android:layout_marginLeft="2dp"
                ></TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_profession"
                android:layout_below="@id/txt_name"
                android:layout_marginTop="10dp"
                android:text="profession"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mainaccent"
                android:layout_marginLeft="2dp"
                ></TextView>
            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/txt_bio"
                android:layout_below="@+id/txt_profession"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Profession"
                android:textColor="@color/mainaccent"
                android:layout_marginLeft="2dp"
                ></TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/txt_name"
                android:text="Jobs:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mainaccent"
                android:id="@+id/lbl_job"
                ></TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Rating:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/mainaccent"
                android:layout_marginTop="10dp"
                android:id="@+id/lbl_rating"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/login_button_border"
                android:text="Visit Profile"
                android:layout_below="@+id/txt_bio"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/btn_visit_profile"
                ></Button>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_chat_with_sp"
                android:padding="5dp"
                android:src="@drawable/ic_chat_white_30dp"
                android:layout_toRightOf="@+id/btn_visit_profile"
                android:background="@drawable/login_button_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                ></ImageButton>

        </LinearLayout>

    </LinearLayout>








</RelativeLayout>