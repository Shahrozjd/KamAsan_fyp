<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_border"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BroadCast ID:"
        android:id="@+id/lbl_broadcast_req_id"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_broadcast_req_id"
        android:layout_toRightOf="@+id/lbl_broadcast_req_id"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        >
    </TextView>

    <TextView
        android:id="@+id/lbl_broadcast_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_broadcast_req_id"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="Subject:"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_broadcast_title"
        android:layout_below="@+id/lbl_broadcast_req_id"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/lbl_broadcast_title"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:maxLines="1"
        android:ellipsize="end"
        >
    </TextView>

    <TextView
        android:id="@+id/lbl_sp_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_broadcast_title"
        android:layout_marginLeft="2dp"
        android:text="Service Category:"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"

        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_sp_category"
        android:layout_below="@+id/lbl_broadcast_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/lbl_sp_category"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        >
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/btn_details"
        android:layout_below="@+id/lbl_sp_category"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:text="Click to view details"
        android:textSize="15sp"
        android:textColor="@color/colorSapphireBlue"
       android:background="@drawable/notification_button_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        >
    </Button>





</RelativeLayout>