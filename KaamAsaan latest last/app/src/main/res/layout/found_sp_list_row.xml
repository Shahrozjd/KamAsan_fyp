<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imageview_border">


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:textSize="20sp"
        android:textColor="@color/colorSapphireBlue"
        android:layout_marginLeft="2dp"
        ></TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_profession"
        android:textSize="20sp"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorSapphireBlue"
        android:layout_marginLeft="2dp"
        ></TextView>
    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/txt_bio"
        android:layout_below="@+id/txt_profession"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorSapphireBlue"
        android:layout_marginLeft="2dp"
        ></TextView>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_background"
        android:text="Visit Profile"
        android:layout_below="@+id/txt_bio"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/btn_visit_profile"
        ></Button>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/btn_chat_with_sp"
        android:src="@drawable/chat_message"
        android:layout_below="@+id/txt_bio"
        android:layout_toRightOf="@+id/btn_visit_profile"
        android:background="@drawable/button_background"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        ></ImageButton>

<TextView
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:layout_toRightOf="@+id/txt_name"
    android:layout_marginLeft="100dp"
    android:text="Jobs:"
    android:textColor="@color/colorSapphireBlue"
    android:id="@+id/lbl_job"
    android:textSize="20sp"
    ></TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_marginLeft="100dp"
        android:text="Rating:"
        android:textColor="@color/colorSapphireBlue"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="10dp"
        android:id="@+id/lbl_rating"
        android:textSize="20sp"
        ></TextView>


</RelativeLayout>