                android:layout_height="30dp"
                android:layout_below="@id/iv_pic2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/circle_backgound4"
                android:src="@drawable/ic_baseline_image_white_24"></ImageButton>
            <ImageButton
                android:id="@+id/btn_rem2"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_below="@id/iv_pic2"
                android:layout_toRightOf="@+id/btn_pic2"
                android:background="@drawable/circle_backgound4"
                android:src="@drawable/ic_baseline_delete_white_24"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
